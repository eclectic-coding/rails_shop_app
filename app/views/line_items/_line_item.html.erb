<tr>
  <td><%= line_item.quantity %></td>
  <td>
    <figure class="product-image__cart">
      <%= image_tag(line_item.product.image) %>
    </figure>
  </td>
  <td><%= line_item.product.title %></td>
  <td><%= number_to_currency(line_item.total_price) %></td>
  <td><%= link_to 'Remove Item', line_item, method: :delete, data: { confirm: "Are you sure? " }, class: "btn btn-sm btn-outline-danger" %></td>
</tr>